{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "outDir": "../dist/client",
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "vue"],
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["../types/*"],
      "@/components/*": ["./src/components/*"],
      "@/views/*": ["./src/views/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../types/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
